# AWS Configuration
REGION=us-west-1
ACCESS_KEY_ID=your_access_key_here
SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Tables
ARTICLES_TABLE=gwbn-articles
USERS_TABLE=gwbn-users
ANALYTICS_TABLE=gwbn-analytics

# Application Configuration
NEXT_PUBLIC_APP_NAME=Golden West Business News
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database (if using AWS RDS)
DATABASE_URL=postgresql://username:password@host:port/database

# Authentication (if using AWS Cognito)
NEXT_PUBLIC_COGNITO_USER_POOL_ID=your_user_pool_id
NEXT_PUBLIC_COGNITO_CLIENT_ID=your_client_id

# Storage (REQUIRED for AWS S3 uploads)
NEXT_PUBLIC_S3_BUCKET_NAME=gwbn-storage
NEXT_PUBLIC_S3_REGION=us-west-1

# API Gateway (if using AWS API Gateway)
NEXT_PUBLIC_API_GATEWAY_URL=https://your-api-gateway-url.amazonaws.com

# OpenAI Configuration (REQUIRED for transcription)
OPENAI_API_KEY=your_openai_api_key_here

# AWS IAM Role (if using IAM roles instead of access keys)
ROLE_ARN=arn:aws:iam::account:role/role-name
WEB_IDENTITY_TOKEN_FILE=/path/to/token/file
