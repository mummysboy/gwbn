{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Action": [
				"dynamodb:GetItem",
				"dynamodb:PutItem",
				"dynamodb:UpdateItem",
				"dynamodb:DeleteItem",
				"dynamodb:Scan",
				"dynamodb:Query",
				"dynamodb:DescribeTable"
			],
			"Resource": [
				"arn:aws:dynamodb:us-west-1:*:table/gwbn-articles",
				"arn:aws:dynamodb:us-west-1:*:table/gwbn-users",
				"arn:aws:dynamodb:us-west-1:*:table/gwbn-analytics"
			]
		},
		{
			"Effect": "Allow",
			"Action": [
				"secretsmanager:GetSecretValue"
			],
			"Resource": [
				"arn:aws:secretsmanager:us-west-1:*:secret:OPENAI_API_KEY*"
			]
		},
		{
			"Effect": "Allow",
			"Action": [
				"s3:PutObject",
				"s3:PutObjectAcl",
				"s3:DeleteObject",
				"s3:GetObject",
				"s3:ListBucket"
			],
			"Resource": [
				"arn:aws:s3:::gwbn-storage",
				"arn:aws:s3:::gwbn-storage/*"
			]
		}
	]
}
